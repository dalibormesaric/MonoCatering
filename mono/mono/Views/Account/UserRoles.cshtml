@model mono.Models.SelectUserRolesViewModel

@{
    ViewBag.Title = "User Roles";
}

<h2>Change Role</h2>
<p>For user <strong>@Model.UserName</strong>.</p>
<hr />

@using (Html.BeginForm("UserRoles", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.UserName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @readonly = "true" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.FirstName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", @readonly = "true" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.LastName, new { @class = "col-md-2 control-label" })            
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", @readonly = "true" })
            </div>
        </div>

        <h4>Select Role Assignments</h4>
        <hr />

        <div class="form-group">
            @Html.Label("Admin", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.RadioButtonFor(model => model.Role, "admin")
                
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Restaurant", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.RadioButtonFor(model => model.Role, "restaurant")
            </div>
        </div>

        <div class="form-group">
            @Html.Label("User", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.RadioButtonFor(model => model.Role, "user")
            </div>
        </div>

        <hr />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Change role" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>