@model IEnumerable<mono.Models.FoodIngredient>

@{
    ViewBag.Title = "Basket";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Basket</h2>
<p>@Html.ActionLink("Add", "Index", "Item", new { area = "Auction" }, null)</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Food.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayName("Size")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pieces)
        </th>
        <th>
            @Html.DisplayName("Ingredients")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Food.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategorySize.Value)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pieces)
        </td>
        <td>
            @string.Join(", ", item.Ingredients.Select(i => i.Name).ToArray())
        </td>
        <td>
            @Html.ActionLink("Remove", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
@if (Model.Count() > 0) 
{ 
    @Html.ActionLink("Create order", "Create", "Order")
}
