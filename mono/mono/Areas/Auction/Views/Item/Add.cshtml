@model mono.Areas.Auction.Models.FoodIngredientViewModel
@using mono.Models
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@Model.FoodName</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.FoodID)

        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CategorySizeID, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CategorySizeID")
                @Html.ValidationMessageFor(model => model.CategorySizeID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Pieces, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Pieces)
                @Html.ValidationMessageFor(model => model.Pieces)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Ingredients, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @foreach (Ingredient i in ViewBag.IngredientsList)
                {
                    @Html.CheckBox("Ingredients", new { @value = i.ID })
                    @Html.Label(@i.Name)
                }
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
