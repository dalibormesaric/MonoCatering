@model Mono.Areas.Auction.Models.FoodIngredientViewModel
@using Mono.Model
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add to basket</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@Model.FoodName</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.FoodID)

        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CategorySizeID, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CategorySizeID")
                @Html.ValidationMessageFor(model => model.CategorySizeID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Pieces, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Pieces)
                @Html.ValidationMessageFor(model => model.Pieces)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Ingredients, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ListBox("Ingredients", @ViewBag.IngredientsList as MultiSelectList, new { @class = "chosen-select", @data_placeholder = "Choose ingredients" })
                @Html.ValidationMessageFor(model => model.Ingredients)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
